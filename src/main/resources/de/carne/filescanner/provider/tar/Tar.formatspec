//
// Tar file format: https://en.wikipedia.org/wiki/Tar_(computing)
//

// Symbols

TYPEFLAG_SYMBOLS:
byte_symbols {
	0x00: "AREGTYPE: regular file"
	0x30: "REGTYPE: regular file"
	0x31: "LNKTYPE: link"
	0x32: "SYMTYPE: reserved"
	0x33: "CHRTYPE: character special"
	0x34: "BLKTYPE: block special"
	0x35: "DIRTYPE: directory"
	0x36: "FIFOTYPE: FIFO special"
	0x37: "CONTTYPE: reserved"
	0x4c: "GNUTYPE_LONGNAME"
}

// Specs

TAR_USTAR_HEADER:
struct {
HEADER_NAME@TAR_ENTRY:
	char[100] "name"
	char[8] "mode"
		->validate(R"^[0-7]+.*")
	char[8] "uid"
		->validate(R"^[0-7]+.*")
	char[8] "gid"
		->validate(R"^[0-7]+.*")
HEADER_SIZE@TAR_ENTRY:
	char[12] "size"
		->validate(R"^[0-7]+.*")
	char[12] "mtime"
		->validate(R"^[0-7]+.*")
	char[8] "chksum"
		->validate(R"^[0-7]+.*")
	byte "typeflag"
		->validate(@TYPEFLAG_SYMBOLS)
		->format(@CharFormat)
		->renderer(@TYPEFLAG_SYMBOLS)
	char[100] "linkname"
	char[6] "magic"
		->validate("ustar " || "ustar\u0000" || "\u0000\u0000\u0000\u0000\u0000\u0000")
	char[2] "version"
	char[32] "uname"
	char[32] "gname"
	char[8] "devmajor"
	char[8] "devminor"
	char[155] "prefix"
	byte[12] "<unused>"
}

TAR_HEADER:
union "header block" {
	@TAR_USTAR_HEADER
}

TAR_DATA:
struct {
	encoded #tarDataEncodedInputConfig
}

