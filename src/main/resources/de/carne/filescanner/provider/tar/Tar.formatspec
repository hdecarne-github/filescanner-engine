//
// Tar file format: https://en.wikipedia.org/wiki/Tar_(computing)
//

// Symbols

TYPEFLAG_SYMBOLS:
byte_symbols {
	0x00: "AREGTYPE: regular file"
	0x30: "REGTYPE: regular file"
	0x31: "LNKTYPE: link"
	0x32: "SYMTYPE: reserved"
	0x33: "CHRTYPE: character special"
	0x34: "BLKTYPE: block special"
	0x35: "DIRTYPE: directory"
	0x36: "FIFOTYPE: FIFO special"
	0x37: "CONTTYPE: reserved"
}

// Specs

TAR_POSIX_HEADER:
struct "posix_header_block" {
HEADER_NAME@TAR_ENTRY:
	char[100] "name"
	char[8] "mode"
	char[8] "uid"
	char[8] "gid"
	char[12] "size"
	char[12] "mtime"
	char[8] "chksum"
	byte "typeflag"
		->validate(@TYPEFLAG_SYMBOLS)
		->format(@CharFormat)
		->renderer(@TYPEFLAG_SYMBOLS)
	char[100] "linkname"
	char[6] "magic"
		->validate("ustar " || "ustar\u0000")
	char[2] "version"
	char[32] "uname"
	char[32] "gname"
	char[8] "devmajor"
	char[8] "devminor"
	char[155] "prefix"
	byte[12] "<unused>"
}

TAR_HEADER:
union {
	@TAR_POSIX_HEADER
}

TAR_ENTRY:
struct text("tar entry \"%s\"", @HEADER_NAME) {
	@TAR_HEADER
}

TAR_ARCHIVE:
format_spec "tar archive" {
	@TAR_ENTRY
	sequence @TAR_ENTRY
}
