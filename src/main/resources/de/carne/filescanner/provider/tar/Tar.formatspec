TAR_ENTRY:
struct text("tar entry \"%s\"", @HEADER_NAME) {
	@TAR_HEADER
	conditional #tarEntryDataSpec {
		@TAR_DATA
	}
	range[#tarDataUnusedSize] "<unused>"
}

TAR_ARCHIVE:
format_spec "tar archive" {
	@TAR_ENTRY
	sequence @TAR_ENTRY
	sequence @TAR_TRAILER
		->max(2)
}
